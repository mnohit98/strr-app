{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/index.js"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Node",
            "port": 9229,    // The default port for node --inspect
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}
