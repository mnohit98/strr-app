class LocationRequest {
    constructor(state, city, areaCode, latitude, longitude) {
        this.state = state;
        this.city = city;
        this.areaCode = areaCode;
        this.latitude = latitude;
        this.longitude = longitude;

        this.validate();
    }

    validate() {
        if (!this.state || !this.city || !this.areaCode) {
            throw new Error('State, city, and area code are required.');
        }
    }
}

class LocationResponse {
    constructor(id, state, city, areaCode) {
        this.id = id;
        this.state = state;
        this.city = city;
        this.areaCode = areaCode;
    }

    // Optional: Add a method to format the response
    toJSON() {
        return {
            id: this.id,
            state: this.state,
            city: this.city,
            areaCode: this.areaCode,
        };
    }
}

module.exports = {
    LocationRequest,
    LocationResponse,
};
